<!DOCTYPE html>
<html lang="kr">
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

		<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0,  maximum-scale=1.0, shrink-to-fit=no" />
		<meta name="format-detection" content="telephone=no" />

		<title>BDR - 검은사막 레시피</title>

		<link rel="stylesheet" href="/css/main.css" type="text/css" />
		<script type="text/javascript" src="/js/main.js"></script>
	</head>
	<body>
		<div><input type="text" id="searchText"></div>
		<div><img src="<%= item.imgUrl %>" /></div>
		<div><%= item.name %></div>
		<div><%- item.desc.replace('\n', '<br />') %></div>
		<hr>
		<div>획득 방법</div>
		<% for (var i = 0 ; Array.isArray(earn) && i < earn.length; i++) {%>
		<div class="row">
			<!-- <div><%= earn[i].type == 'craft' ? '제작' : '습득' %></div> -->
			<div><%= earn[i].work %></div>
			<div><%= earn[i].path %></div>
			<% for (var x = 0 ; Array.isArray(earn[i].craftList) && x < earn[i].craftList.length; x++) {%>
				<div><a href="<%= earn[i].craftList[x].url %>"><%= earn[i].craftList[x].itemId %></a></div>
				<div><%= earn[i].craftList[x].name %></div>
				<div><%= earn[i].craftList[x].count %><input class=count type=text value=""></div>
			<% } %>
		</div>
		<% } %>
		<hr>
		<div><%= item.name %> - 제작가능 아이템</div>
		<% for (var y = 0 ; Array.isArray(usages) && y < usages.length; y++) {%>
		<div><%= usages[y].resultItemId %></div>
		<div><a href="<%= usages[y].url %>"><%= usages[y].resultItemName %></a></div>
		<% } %>
	</body>
</html>
